@model IEnumerable<PruebaBestfacar.Models.Vehiculo>

@{
    ViewBag.Tittle = "Vehiculos Disponibles";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
        }


        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: left;
        }

        td {
            background-color: #fff;
            padding: 10px;
        }

        .action-links {
            text-align: center;
        }

            .action-links a {
                color: #333;
                text-decoration: none;
                margin-right: 10px;
                padding: 5px 10px;
                border-radius: 3px;
            }

                .action-links a:hover {
                    background-color: #333;
                    color: white;
                }

        .btn-edit {
            display: inline-block;
            padding: 5px 10px;
            background-color: green;
            color: black;
            text-decoration: white;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn-details {
            display: inline-block;
            padding: 5px 10px;
            background-color: dodgerblue;
            color: black;
            text-decoration: none;
            border-radius: 4px;
        }

        .btn-delete {
            display: inline-block;
            padding: 5px 10px;
            background-color: indianred;
            color: black;
            text-decoration: none;
            border-radius: 4px;
        }

        .btn-create-new {
            display: inline-block;
            padding: 10px 20px;
            background-color: black;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
            text-align: left;
        }

            .btn-create-new:hover {
                background-color: whitesmoke;
            }

    </style>
</head>
<body>
    <h1>Vehiculos Disponibles</h1>
    <br />
    <p>
        @Html.ActionLink("Agregar Vehiculo", "Create", null, new { @class = "btn-create-new" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlImage)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Anio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreImagen)
                </td>
                <td>
                    <img width="120" height="90" src="@Url.Action("convertirImagen", "Vehiculoes", new {VehiculoID = item.VehiculoID})" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UrlImage)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.VehiculoID }, new { @class = "btn-edit" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.VehiculoID }, new { @class = "btn-details" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.VehiculoID }, new { @class = "btn-delete" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
