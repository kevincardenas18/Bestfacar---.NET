﻿@{
    ViewBag.Title = "Pagina Inicio";
}

<style>

    .carousel-inner .item img {
        width: 100%;
        height: auto;
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        padding: 10px;
    }

    .col-md-4 {
        margin-bottom: 20px;
    }

        .col-md-4 h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .col-md-4 p {
            margin-bottom: 20px;
        }

        .col-md-4 img {
            width: 100%;
            height: auto;
            margin-bottom: 10px;
        }

    .btn-default {
        background-color: #f0ad4e;
        color: white;
        border: none;
    }

        .btn-default:hover {
            background-color: #e6953b;
            color: white;
        }
</style>

<!-- Carrosel -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @{ int ol = 0;}
        @foreach (var item in Model)
        {
            var olDinamico = ol++ == 0 ? "active" : "";
            <li data-target="#carouselExampleIndicators" data-slide-to="@ol" class="@olDinamico"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @{ int cont = 0;}
        @foreach (var item in Model)
        {
            var itemDinamico = cont++ == 0 ? "item active" : "item";
            <div class="@itemDinamico">
                <a href="@(item.Url)" target="_blank"><img src="@Url.Content(item.ImagePath)" alt="@(item.Nombre)"></a>
                <div class="carousel-caption">
                    @(item.Nombre)
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <!-- Fin Carrosel -->

