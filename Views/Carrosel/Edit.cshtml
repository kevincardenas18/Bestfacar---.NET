@model PruebaBestfacar.Models.Carrosel
@{
    ViewBag.Tittle = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Carrosel</title>

    <style>
        body {
            background-color: white;
            color: black;
        }

        h4 {
            color: orange;
        }

        .form-horizontal .control-label {
            color: white;
        }

        .form-horizontal .editor-label {
            color: orange;
        }

        .form-control {
            background-color: white;
            color: black;
        }

        .text-danger {
            color: orange;
        }

        .btn-default {
            background-color: orange;
            color: white;
        }

        a {
            color: white;
        }

        .black-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: black;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }

            .black-button:hover {
                background-color: #333;
            }

    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @using (Html.BeginForm("Edit", "Carrosel", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Editar Archivo @Html.DisplayFor(model => model.Nombre)</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.carroselID)

            <div class="form-group">
                @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>
            </div>

            <fieldset class="control-label col-md-2">
                <div class="editor-label">
                    SUBIR IMAGEN
                </div>
            </fieldset>
            <div class="col-md-10">
                <div class="editor-field">
                    <input type="file" id="ImagePath" name="ImagePath" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

<div>
    @Html.ActionLink("Regresar", "Index", null, new { @class = "black-button" })
</div>
</body>
</html>

