@model IEnumerable<PruebaBestfacar.Models.Carrosel>

@{
    ViewBag.Tittle = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Imagen Actual
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <th>
               <img src="@Url.Content(item.ImagePath)" alt="@(item.Nombre)" style="max-width:100px;">
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.carroselID }) |
                @Html.ActionLink("Details", "Details", new { id=item.carroselID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.carroselID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
