
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesion</title>
    @Styles.Render("~/Content/css")
    

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/Content/login.css">

</head>
<body>

    <div class="sidenav">
        <div class="login-main-text">
            <p><img width="400" height="400" src="~/Content/logo/2.png" /></p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-4 col-sm-12">
            <div class="login-form">
                
                <form action="@Url.Action("Index","Access")"  method="post">

                    <div class="form-group">
                        <h1>Iniciar Sesion</h1><br>
                        <label><br> <h3>Correo:</h3></label>
                        <input type="email" class="form-control" name="email"> </input>
                    </div>

                    <div class="form-group">
                        <label><br> <h3>Contraseña:</h3></label>
                        <input type="password" class="form-control" name="password"> </input>
                    </div>
                    <button type="submit" class="btn btn-black"><h3>Ingresar</h3></button>
                    <button type="submit" class="btn btn-black"><h3>Registrarse</h3></button>
                </form>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

