                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreImagen)
            </td>
            <td>
                <img width="120" height="90" src="@Url.Action("convertirImagen", "Vehiculoes", new {VehiculoID = item.VehiculoID})" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.VehiculoID }) |
                @Html.ActionLink("Details", "Details", new { id=item.VehiculoID }) |
